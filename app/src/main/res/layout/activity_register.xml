<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context=".register">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Details"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/bname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="69dp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Business Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/industry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bname"
            android:layout_alignStart="@+id/bname"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Industry"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/industry"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Business Location Country"
            android:inputType="text" />

        <EditText
            android:id="@+id/county"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/country"
            android:layout_alignStart="@+id/bname"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Business Location County"
            android:inputType="text" />

        <EditText
            android:id="@+id/town"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/county"
            android:layout_alignStart="@+id/bname"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Business Location Town"
            android:inputType="text" />

        <Button
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/sacconumber"
            android:layout_marginBottom="100dp"
            android:background="@drawable/button"
            android:fontFamily="sans-serif-condensed"
            android:text="Finish" />

        <EditText
            android:id="@+id/contactname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/town"
            android:layout_alignStart="@+id/bname"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Contact Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contactname"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Phone Number"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phonenumber"
            android:layout_marginTop="-3dp"
            android:layout_marginEnd="-155dp"
            android:layout_toStartOf="@+id/finish"
            android:fontFamily="sans-serif-condensed"
            android:text="Answer below how many people you can safely accomodate /handle or carry in one sitting as per covid 19 regulations: " />

        <EditText
            android:id="@+id/numpeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_alignEnd="@+id/textView10"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Number of people "
            android:inputType="number" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="214dp"
            android:layout_height="75dp"
            android:layout_below="@+id/numpeople"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="-153dp"
            android:layout_toStartOf="@+id/finish"
            android:fontFamily="sans-serif-condensed"
            android:text="Approximately how long do customers/passengers or the public stay around your premises/insitution or PSV?" />

        <EditText
            android:id="@+id/timein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_alignEnd="@+id/textView11"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Time in minutes"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="214dp"
            android:layout_height="50dp"
            android:layout_below="@id/timein"
            android:layout_alignParentStart="true"
            android:layout_marginStart="87dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="294dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Only fill this part if you run a PSV. Ubers and other ride sharing carriers do not need to fill this" />

        <EditText
            android:id="@+id/numplate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView12"
            android:layout_alignEnd="@+id/textView10"
            android:layout_marginTop="-287dp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Number Plate"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numplate"
            android:layout_alignEnd="@+id/textView11"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Route"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/sacconumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/route"
            android:layout_alignEnd="@+id/textView11"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Sacco Registration Number"
            android:inputType="textPersonName" />
    </RelativeLayout>



</ScrollView>